{
  "compilerOptions": {
    "target": "ES2022",                                
    "module": "commonjs",                              
    "lib": ["ES2022"],                                
    "outDir": "./lib",                                  
    "rootDir": "./src",                                
    "strict": true,                                     
    "noImplicitAny": true,                           
    "esModuleInterop": true,                             
    "skipLibCheck": true,                              
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "**/*.test.ts", "jest.config.js", "jest.setup.js", "coverage"]
}